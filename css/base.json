{
  ".h1, h1, .h2, h2, .h3, h3": {
    "font-family": "{font.family.title.value}"
  },
  ".h1, h1": {
    "font-size": "{size.font.title.xl.value}"
  },
  ".h2, h2": {
    "font-size": "{size.font.title.large.value}"
  },
  ".h3, h3": {
    "font-size": "{size.font.title.medium.value}"
  },

  ".body, body": {
    "background-color": "{color.background.base.value}"
  },

  ".bg-base": {
    "background-color": "{color.background.base.value}"
  },

  ".code": {
    "font-family": "{font.family.code.value}",
    "font-size": "{size.font.code.value}"
  },

  ".btn": {
    "font-family": "{font.family.button.value}",
    "font-size": "{size.font.button.value}",
    "border-radius": "{shape.corner.button.value}",
    "padding": [
      "{size.padding.button.vertical.value}",
      "{size.padding.button.horizontal.value}"
    ]
  },

  ".btn:hover":{
    "cursor": "{cursor.button.active.value}"
  },

  ".btn-primary": {
    "background-color": "{color.background.button.primary.base.value}",
    "color": "{color.font.button.primary.value}",
    "border": "{color.border.button.primary.base.value}"
  },

  ".btn-primary:hover": {
    "background-color": "{color.background.button.primary.active.value}"
  },

  ".btn-secondary": {
    "background-color": "{color.background.button.secondary.base.value}",
    "color": "{color.font.button.secondary.value}",
    "border": "{color.border.button.secondary.base.value}"
  },

  ".btn-secondary:hover": {
    "background-color": "{color.background.button.secondary.active.value}"
  },

  ".divide": {
    "background-color": "{color.border.divide.value}"
  },

  ".divide-x": {
    "width": "{size.border.divide.value}"
  },

  ".divide-y": {
    "height": "{size.border.divide.value}"
  }
}